<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hypersphere.croco">

    <application
        android:name=".CrocoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Croco">
        <activity android:name=".activities.GameActivity"></activity>
        <activity android:name=".activities.ChoosePlayersNamesActivity" />
        <activity android:name=".activities.game.SingleGameActivity" />
        <activity android:name=".activities.WordsRedactorActivity" />
        <activity android:name=".activities.RulesActivity" />
        <activity android:name=".activities.SettingsActivity" />
        <activity android:name=".activities.CreateGameActivity" />
        <activity android:name=".activities.MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>